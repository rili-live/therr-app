{
  "name": "rili-server",
  "version": "1.0.0",
  "description": "The server side code for Rili",
  "main": "build/index.js",
  "scripts": {
    "build": "../node_modules/.bin/webpack --env production",
    "build:dev": "../node_modules/.bin/webpack --env development",
    "build:watch": "../node_modules/.bin/webpack --watch --env development",
    "lint:fix": "../node_modules/.bin/eslint --ext .jsx,.js --fix ./ && ../node_modules/.bin/tslint --fix -p ./",
    "lint": "../node_modules/.bin/eslint --ext .jsx,.js ./ && ../node_modules/.bin/tslint -p ./",
    "migrations:create": "node --require=../node_modules/dotenv/config ../node_modules/.bin/knex --knexfile ./src/store/knexfile.js migrate:make $1 dotenv_config_path=../.env",
    "migrations:run": "node --require=../node_modules/dotenv/config ../node_modules/.bin/knex --knexfile ./src/store/knexfile.js migrate:latest dotenv_config_path=../.env",
    "migrations:rollback": "node --require=../node_modules/dotenv/config ../node_modules/.bin/knex --knexfile ./src/store/knexfile.js migrate:rollback $1 dotenv_config_path=../.env",
    "seeds:create": "node --require=../node_modules/dotenv/config ../node_modules/.bin/knex --require @babel/register --knexfile ./src/store/knexfile.js seed:make $1 dotenv_config_path=../.env",
    "seeds:run": "node --require=../node_modules/dotenv/config ../node_modules/.bin/babel-node ../node_modules/.bin/knex --knexfile ./src/store/knexfile.js seed:run dotenv_config_path=../.env",
    "start": "../node_modules/.bin/pm2 start pm2/ecosystem.config.js --watch --env production",
    "start:api": "../node_modules/.bin/pm2 start pm2/ecosystem.config.js --only rili-server-api --env production",
    "start:api:dev": "npm run build:dev && ../node_modules/.bin/nodemon --require=../node_modules/dotenv/config build/server-api.js dotenv_config_path=../.env --withSQLLogs",
    "start:socket": "../node_modules/.bin/pm2 start pm2/ecosystem.config.js --only rili-server-socket-io --env production",
    "start:socket:dev": "npm run build:dev && ../node_modules/.bin/nodemon --require=../node_modules/dotenv/config build/server-socket-io.js dotenv_config_path=../.env --withAllLogs",
    "test": "npm run lint:fix && echo \"Error: no test specified\" && exit 0"
  },
  "keywords": [
    "rili",
    "server"
  ],
  "author": "Rili, Inc.",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {}
}
