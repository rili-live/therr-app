{
  "name": "rili-client-web",
  "version": "0.0.1",
  "description": "The web client side code for Rili",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:app && npm run build:server && node ./update-views.js",
    "build:dev": "npm run build:app:dev && npm run build:server:dev && node ./update-views.js",
    "build:app": "webpack --config webpack.app.config.js --env production",
    "build:app:dev": "webpack --config webpack.app.config.js --env development",
    "build:server": "webpack --config webpack.server.config.js --env production",
    "build:server:dev": "webpack --config webpack.server.config.js --env development",
    "build:watch": "npm run build:server:dev && webpack --config webpack.app.config.js --watch --env development",
    "lint:fix": "eslint --ext .jsx,.js --fix ./ && tslint --fix -p ./",
    "lint": "eslint --ext .jsx,.js ./ && tslint -p ./",
    "start": "pm2 start pm2/ecosystem.config.js --only rili-server-client --env production --watch",
    "start:dev": "nodemon --require=../node_modules/dotenv/config ./build/server-client.js dotenv_config_path=../.env",
    "test": "npm run lint:fix && jest --no-cache",
    "test:update": "jest -u",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "watch:app": "webpack --config webpack.app.config.js --watch --env development",
    "watch:server": "webpack --config webpack.server.config.js --watch --env development"
  },
  "keywords": [
    "rili",
    "web"
  ],
  "author": "Rili, Inc.",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {}
}
