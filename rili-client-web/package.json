{
  "name": "rili-client-web",
  "version": "0.0.1",
  "description": "The web client side code for Rili",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:app && npm run build:server && npx node ./update-views.js",
    "build:dev": "npm run build:app:dev && npm run build:server:dev && npx node ./update-views.js",
    "build:app": "npx webpack --config webpack.app.config.js --env production",
    "build:app:dev": "npx webpack --config webpack.app.config.js --env development",
    "build:server": "npx webpack --config webpack.server.config.js --env production",
    "build:server:dev": "npx webpack --config webpack.server.config.js --env development",
    "build:watch": "npm run build:server:dev && npx webpack --config webpack.app.config.js --watch --env development",
    "lint:fix": "npx eslint --ext .jsx,.js --fix ./ && npx tslint --fix -p ./",
    "lint": "npx eslint --ext .jsx,.js ./ && npx tslint -p ./",
    "start": "npx node --require=../node_modules/dotenv/config ./build/server-client.js dotenv_config_path=../.env",
    "start:dev": "npx nodemon --require=../node_modules/dotenv/config ./build/server-client.js dotenv_config_path=../.env",
    "test": "npx npm run lint:fix && jest --no-cache",
    "test:update": "npx jest -u",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "watch:app": "npx webpack --config webpack.app.config.js --watch --env development",
    "watch:server": "npx webpack --config webpack.server.config.js --watch --env development"
  },
  "keywords": [
    "rili",
    "web"
  ],
  "author": "Rili, Inc.",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {}
}
