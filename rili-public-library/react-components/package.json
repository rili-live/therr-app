{
  "name": "rili-public-library",
  "version": "0.0.1",
  "description": "Multi-purpose code used in the Rili codebase and open-sourced to the developer community",
  "main": "index.js",
  "scripts": {
    "build": "webpack --env production",
    "build:watch": "webpack --watch --env production",
    "lint:fix": "eslint --ext .jsx,.js --fix ./ && tslint --fix -p ./",
    "lint": "eslint --ext .jsx,.js ./ && tslint -p ./",
    "preinstall": "rm -f package-lock.json*",
    "start": "npm run server:dev",
    "server": "webpack-dev-server --env development",
    "server:dev": "nodemon --watch webpack.config.js --exec \"npm run server\"",
    "test": "npm run lint:fix && jest --no-cache",
    "test:update": "jest -u",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "rili",
    "public",
    "library"
  ],
  "author": "Rili, Inc.",
  "license": "MIT",
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-alias": "^1.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^20.0.4",
    "nodemon": "^1.18.3",
    "react-test-renderer": "^16.0.0",
    "tslint": "^5.11.0",
    "webpack": "^4.16.2",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.3"
  }
}
